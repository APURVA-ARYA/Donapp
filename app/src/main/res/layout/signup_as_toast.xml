<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"


        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_bg"
            >

            <TextView
                android:id="@+id/signup_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/abril_fatface"
                android:text="SIGN UP AS"
                android:textColor="@color/text_color"
                android:textSize="25sp">

            </TextView>

            <RelativeLayout
                android:id="@+id/signup_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_as"
                android:layout_marginTop="30dp"
                android:padding="5dp">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/signup_donor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    app:neumorph_shadowColorLight="#74CAAE"
                    app:neumorph_shadowElevation="3dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/light_bg"
                        android:gravity="center"
                        android:padding="20dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/signup_donor_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/charity_icon"

                            >

                        </androidx.appcompat.widget.AppCompatImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/signup_donor_img"
                            android:layout_centerHorizontal="true"
                            android:text="DONOR"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>


                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/signup_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:clickable="true"
                    app:neumorph_shadowColorLight="#DADF91"
                    app:neumorph_shadowElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/light_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/signup_receiver_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/moon">

                        </androidx.appcompat.widget.AppCompatImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/signup_receiver_img"
                            android:layout_centerHorizontal="true"
                            android:text="RECEIVER"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>


                </soup.neumorphism.NeumorphCardView>


            </RelativeLayout>

            <ImageView
                android:id="@+id/signup_as_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/signup_card"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/close_btn">

            </ImageView>
        </RelativeLayout>





    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>