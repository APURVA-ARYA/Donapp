<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donorhomepage"
    android:background="@color/light_bg">


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/donorhomepage_header"
        style="@style/Widget.Neumorph.ImageView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:neumorph_lightSource="leftBottom"
        app:neumorph_shadowColorDark="@color/light_bg"
        app:neumorph_shadowElevation="6dp"

        app:neumorph_shapeAppearance="@style/Base.CardView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp">

            <soup.neumorphism.NeumorphTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="DONEAP"
                android:textAlignment="center"
                android:textColor="@color/light_bg"
                android:textSize="30sp"
                android:textStyle="bold"
                app:neumorph_shadowElevation="2dp" />

            <ImageButton
                android:id="@+id/donorhomepage_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:background="@color/light_bg" />

        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>

<!--    <soup.neumorphism.NeumorphCardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        app:neumorph_lightSource="rightTop"-->
<!--        app:neumorph_shapeType="basin">-->
    <androidx.cardview.widget.CardView
       app:cardBackgroundColor="@color/light_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="40dp">



        <RelativeLayout
            android:id="@+id/bottom_menulayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:paddingTop="2dp">


            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/home_btn"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:src="@drawable/home_icon"
                app:neumorph_shapeType="basin" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/lib_btn"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"

                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:src="@drawable/home_icon"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/notification_btn"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:src="@drawable/home_icon"
                app:neumorph_shapeType="flat" />


        </RelativeLayout>

<!--    </soup.neumorphism.NeumorphCardView>-->
</androidx.cardview.widget.CardView>

</RelativeLayout>