<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    tools:context=".categorypage"
    android:orientation="vertical">

    <soup.neumorphism.NeumorphTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your category ..."
        android:textColor="@color/text_color"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"/>



   <soup.neumorphism.NeumorphCardView
       app:neumorph_shapeType="flat"

       app:neumorph_shadowColorDark="#FEC8D8"

       android:id="@+id/charity_card"
       android:layout_width="300dp"
       android:layout_height="200dp"

       android:clickable="true"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="30dp">

       <RelativeLayout

           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/charity_icon"
               android:layout_width="104dp"
               android:layout_height="84dp"
               android:layout_alignParentTop="true"
               android:layout_centerInParent="true"
               android:layout_marginTop="20dp"
               android:src="@drawable/charity_icon"
               app:tint="#D291BC" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/charity_icon"
               android:layout_marginTop="20dp"
               android:fontFamily="sans-serif-black"
               android:text="CHARITY"
               android:textAlignment="center"
               android:textColor="@color/text_color"
               android:textSize="26sp" />

       </RelativeLayout>
   </soup.neumorphism.NeumorphCardView>




    <soup.neumorphism.NeumorphCardView
        android:id="@+id/animalrescue_card"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowColorDark="#E0BBE4"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/animal_icon"
                android:layout_width="104dp"
                android:layout_height="84dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/category_animalrescue"
                app:tint="#957DAD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animal_icon"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="ANIMAL RESCUE"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="26sp" />

        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>

</LinearLayout>